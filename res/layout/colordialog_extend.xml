<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
		android:id="@+id/linearLayout2" android:layout_width="fill_parent">
	<ScrollView
	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
		<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	android:stretchColumns="0,1"
		>


			<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<Button
			android:layout_span="2"
			android:layout_width="fill_parent" android:id="@+id/chooser_getusername"
				android:text="ユーザー名取得" android:layout_height="wrap_content"></Button>
			</TableRow>
			<TableRow>
			<Button
			android:layout_span="2"
			android:layout_width="fill_parent" android:id="@+id/chooser_userpage"
				android:text="その他操作" android:layout_height="wrap_content"></Button>
			</TableRow>
			<TableRow>
			<Button
			android:layout_span="2"
			android:layout_width="fill_parent" android:id="@+id/chooser_commentlist"
				android:text="発言リスト" android:layout_height="wrap_content"></Button>
			</TableRow>
		<TableRow
android:gravity="center"
android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			</TableRow>
			<TableRow
android:gravity="center"
android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		    <SeekBar
		        android:id="@+id/color_dialog_seek"
android:gravity="left"
android:layout_span="1"
android:progress="0"
android:max="1"
android:layout_width="fill_parent"
android:layout_height="wrap_content"/>
		    <TextView
android:gravity="left"
android:text="背景色/文字色"
			android:layout_span="1"
android:layout_width="fill_parent"
			android:layout_height="wrap_content"></TextView>
		</TableRow>
			<LinearLayout
		android:id="@+id/colorchooser_root"
		android:gravity="center"
			android:layout_span="2"
		android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			</LinearLayout>
			<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
			android:text="ニックネーム"
			android:layout_span="2"
			android:gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"></TextView>
			</TableRow>
			<TableRow android:layout_width="fill_parent"
			android:layout_height="wrap_content">

		<EditText
		android:id="@+id/chooseredit"
		android:layout_gravity="center"
		android:layout_span="2"
		android:paddingRight="80dip" android:layout_height="wrap_content"
			android:hint="ニックネーム"
			android:inputType="text"
			android:layout_width="fill_parent"></EditText>
			</TableRow>
		<TableRow android:layout_gravity="center">
		    <LinearLayout android:gravity="center"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_span="2"
		        android:orientation="horizontal">
			<Button
			    android:layout_weight="1"
			android:layout_width="fill_parent" android:id="@+id/chooser_button0"
				android:text="OK" android:layout_height="wrap_content"></Button>
			<Button
			    android:layout_weight="1"
			android:layout_width="fill_parent" android:id="@+id/chooser_button1"
				android:text="Cancel" android:layout_height="wrap_content"></Button>
		</LinearLayout>

		</TableRow>
</TableLayout>
		</ScrollView>
		</LinearLayout>
