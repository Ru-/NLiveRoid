<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#00000000"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<LinearLayout
android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_gravity="left">
			<ImageView android:layout_gravity="left"
				android:id="@+id/history_thumbnail"
				android:layout_width="80.0dip" android:layout_height="80.0dip"
				android:background="@drawable/noimage"
				android:scaleType="centerCrop">
			</ImageView>
			<TableLayout
			    android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TableRow>
				    <TextView android:id="@+id/history_lv"
						android:singleLine="true" android:layout_height="wrap_content"
						android:layout_width="fill_parent" android:text="放送LV"></TextView>
						</TableRow>
				<TableRow>
				    <TableLayout
			    android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:stretchColumns="0,1">
				<TableRow>
					<TextView android:id="@+id/history_co_or_owner"
						android:singleLine="true" android:layout_height="wrap_content"
						android:layout_width="fill_parent" android:text="コミュIDまたは放送者名"></TextView>
				</TableRow>
				</TableLayout>
				</TableRow>
				<TableRow>
					<TextView android:id="@+id/history_coname"
						android:layout_height="wrap_content" android:layout_width="fill_parent"
						android:singleLine="true" android:text="コミュニティ名"></TextView>
				</TableRow>
				<TableRow>
					<TextView android:id="@+id/history_title"
						android:layout_height="wrap_content" android:layout_width="fill_parent"
						android:singleLine="true" android:text="タイトル"></TextView>
				</TableRow>
				<TableRow>
					<TextView android:id="@+id/history_time"
						android:layout_height="wrap_content" android:layout_width="fill_parent"
						android:text="時間"></TextView>
				</TableRow>
			</TableLayout>
			</LinearLayout>
						<FrameLayout
						android:id="@+id/progress_frame"
						android:layout_height="fill_parent"
						android:layout_width="fill_parent">
<ProgressBar android:layout_width="80.0dip"
					android:layout_height="80.0dip" style="@android:style/Widget.ProgressBar"
					android:id="@+id/progressBar1">	</ProgressBar>
					</FrameLayout>
</FrameLayout>
