<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="#00000000">
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="0"
    android:paddingLeft="25dip"
    android:paddingRight="25dip"
    android:paddingBottom="50dip">
    <TableRow>
    <CheckBox
        android:id="@+id/bc_use_mic"
        android:text="マイク音声を送信する"
        android:textColor="#83dc3a"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>
    </TableRow>
     <TableRow>
    <CheckBox
        android:id="@+id/bc_echo_supression"
        android:text="えこーさぷれっしょん"
        android:textColor="#83dc3a"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow>
        <LinearLayout
            android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
            android:text="音量"
        android:textColor="#83dc3a"
            android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        </TextView><TextView
             android:text="0"
             android:gravity="right"
            android:id="@+id/volume_label"
        android:textColor="#83dc3a"
            android:layout_width="fill_parent"
    android:layout_height="wrap_content">
        </TextView></LinearLayout>
        </TableRow>
          <TableRow>
        <SeekBar android:id="@+id/bc_volume_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="10" /><!-- 0～1 -->
        </TableRow>
     <TableRow>
         <LinearLayout
            android:layout_width="fill_parent"
    android:layout_height="wrap_content">
        <TextView
            android:text="げいん"
        android:textColor="#83dc3a"
            android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        </TextView><TextView
             android:text="0"
             android:gravity="right"
            android:id="@+id/gain_label"
        android:textColor="#83dc3a"
            android:layout_width="fill_parent"
    android:layout_height="wrap_content">
        </TextView></LinearLayout>
            </TableRow>
             <TableRow>
        <SeekBar android:id="@+id/bc_gain_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"  /><!-- 0～100 -->
        </TableRow>
<TableRow>
        <TextView
            android:text="こーでっく"
        android:textColor="#83dc3a"
            android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        </TextView>
            </TableRow>
            <TableRow>
    <Spinner android:id="@+id/bc_codec_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    </TableRow>

        <TableRow>
            <LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content">
         <TextView
            android:text="きゃぷちゃれーと"
        android:textColor="#83dc3a"
            android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        </TextView><TextView
             android:text="0"
             android:gravity="right"
            android:id="@+id/cupture_rate_label"
        android:textColor="#83dc3a"
            android:layout_width="fill_parent"
    android:layout_height="wrap_content">
        </TextView></LinearLayout>
            </TableRow>
             <TableRow>
        <SeekBar android:id="@+id/capture_rate_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="4" /><!-- 5,8,11,22,44 -->
        </TableRow>

    <TableRow>
        <LinearLayout
            android:layout_width="fill_parent"
    android:layout_height="wrap_content">
         <TextView
        android:text="音検知"
        android:textColor="#83dc3a"
            android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        </TextView><TextView
             android:text="0"
             android:gravity="right"
            android:id="@+id/silent_detect_label"
        android:textColor="#83dc3a"
            android:layout_width="fill_parent"
    android:layout_height="wrap_content">
        </TextView></LinearLayout>
            </TableRow>
             <TableRow>
        <SeekBar android:id="@+id/bc_silentdetect_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"  /><!-- 0～100 -->
        </TableRow>
        <TableRow>
            <LinearLayout
            android:layout_width="fill_parent"
    android:layout_height="wrap_content">
         <TextView
        android:text="さいれんとたいむあうと"
        android:textColor="#83dc3a"
            android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        </TextView><TextView
             android:text="2000"
             android:gravity="right"
            android:id="@+id/silent_timeout_label"
        android:textColor="#83dc3a"
            android:layout_width="fill_parent"
    android:layout_height="wrap_content">
        </TextView></LinearLayout>
            </TableRow>
                 <TableRow>
        <SeekBar android:id="@+id/bc_silenttimeout_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="10000" /><!-- 0～10000 -->
        </TableRow>
    </TableLayout>
</ScrollView>

