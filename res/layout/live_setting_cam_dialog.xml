<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="fill_parent" android:layout_width="fill_parent"
     android:background="#000000"
	>
<ScrollView
android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center">

 <TableLayout
		android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:paddingLeft="10dip"
						android:paddingRight="10dip"
			android:paddingBottom="10dip"
			android:stretchColumns="0">
<TableRow
    android:paddingTop="30dip"
        android:gravity="center">
        <Button android:id="@+id/resolution_bt"
            android:gravity="center"
            android:text="解像度"
    android:layout_width="wrap_content"
    android:layout_height="40dip"></Button>
    </TableRow>

    <TableRow
    android:paddingTop="15dip"
        android:gravity="center">
        <TextView
            android:id="@+id/fps_tx"
            android:gravity="center"
		android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="FPS"/>
    </TableRow>
			<TableRow
    android:paddingTop="30dip"
        android:gravity="center">
        <SeekBar android:id="@+id/fps_seek"
            android:max="15"
            android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="40dip"></SeekBar>
    </TableRow>
    <TableRow
    android:paddingTop="15dip"
        android:gravity="center">
        <TextView
            android:id="@+id/keyframe_tx"
            android:gravity="center"
		android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="KeyframeInterval"/>
    </TableRow>
			<TableRow
    android:paddingTop="30dip"
        android:gravity="center">
        <SeekBar android:id="@+id/keyframe_seek"
            android:max="100"
            android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="40dip"></SeekBar>
    </TableRow>
    </TableLayout>
</ScrollView>
			</LinearLayout>