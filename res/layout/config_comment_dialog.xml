    android:layout_height="40dip"></Button>
        <Button android:id="@+id/config_columnwidth"
            android:gravity="center"
            android:text="列幅"
    android:layout_width="wrap_content"
    android:layout_height="40dip"></Button>
    </TableRow>
</TableLayout>
<TableRow
    android:paddingTop="30dip"
        android:gravity="center">
        <Button android:id="@+id/config_columnseq"
            android:gravity="center"
            android:text="列順"
    android:layout_width="wrap_content"
    android:layout_height="40dip"></Button>
    </TableRow>
    </TableLayout>
