    <TableRow
    android:paddingTop="15dip"
        android:gravity="center">
        <TableLayout android:stretchColumns="0,1">
            <TableRow>
                <CheckBox
                    android:text="自動更新有効"
                    android:id="@+id/auto_enable"></CheckBox>
        <Button android:id="@+id/auto_update_comment"
            android:gravity="center"
            android:text="更新間隔"
    android:layout_width="wrap_content"
    android:layout_height="40dip"></Button>
    </TableRow>

</TableLayout>
</TableRow>
    <TableRow
        android:id="@+id/config_at_row"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content">
			 <LinearLayout
	android:layout_width="fill_parent"
    android:layout_height="wrap_content">
			 <CheckBox
			 android:id="@+id/config_at_enable"
			 android:gravity="right"
    android:layout_width="wrap_content"
    android:layout_height="40dip">
    </CheckBox>
    <TextView
        android:text="\@でコテ付け"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
    android:layout_height="40dip"
			 ></TextView>
    <CheckBox
			 android:id="@+id/config_at_overwrite"
			 android:gravity="right"
    android:layout_width="wrap_content"
    android:layout_height="40dip">
    </CheckBox>
    <TextView
        android:text="上書き"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
    android:layout_height="40dip"
			 ></TextView>
    </LinearLayout>
    </TableRow>

    <TableRow
    android:paddingTop="15dip"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content">
			 <Button
			 android:id="@+id/speech_setting"
			 android:text="読み上げ設定"
    android:layout_width="fill_parent"
    android:layout_height="40dip">
    </Button></TableRow>

 <TableRow
    android:paddingTop="30dip"
