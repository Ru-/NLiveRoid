        <CheckBox android:id="@+id/comment_visible"
            android:gravity="center"
            android:text="表示"
    android:layout_width="wrap_content"
    android:layout_height="40dip"></CheckBox>
        <Button android:id="@+id/comment_position"
            android:gravity="center"
            android:text="定位置"
    android:layout_width="wrap_content"
    android:layout_height="40dip"></Button>

