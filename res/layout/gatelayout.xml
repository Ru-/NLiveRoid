<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/gate_layer" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:background="#FFFFFF">


	<ScrollView android:fadingEdge="none"
		android:paddingBottom="80dip" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/gate_main_scroll">


		<TableLayout android:id="@+id/gate_maintable"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:background="#FFFFFF">




			<TableRow>
				<TableLayout android:layout_marginTop="35dip"
					android:layout_height="fill_parent" android:id="@+id/linearLayout2"
					android:layout_width="wrap_content">
					<TableRow android:layout_gravity="center"
						android:layout_height="90dip" android:layout_width="90dip"
						android:layout_marginLeft="15dip">
						<ImageView android:id="@+id/community_thumbnail"
							android:layout_height="90dip" android:layout_width="90dip"></ImageView>
						<TableLayout>
							<TableRow>
								<LinearLayout android:layout_width="wrap_content"
									android:layout_height="wrap_content">
<!-- 									<TextView android:layout_marginLeft="15dip" -->
<!-- 										android:text="開場" android:layout_width="wrap_content" -->
<!-- 										android:textColor="#000000" -->
<!-- 										android:layout_height="wrap_content"></TextView> -->
<!-- 									<TextView android:text=":" android:id="@+id/open_roomtime" -->
<!-- 										android:textColor="#000000" -->
<!-- 										android:layout_marginLeft="15dip" android:layout_marginRight="15dip" -->
<!-- 										android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView> -->
									<TextView android:text="開演" android:layout_marginLeft="15dip"
										android:textColor="#000000"
										android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
									<TextView android:text="--:--" android:id="@+id/open_livetime"
										android:textColor="#000000"
										android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
										android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
								</LinearLayout>
							</TableRow>
							<TableRow>
								<LinearLayout android:layout_gravity="center"
									android:layout_width="wrap_content" android:layout_height="wrap_content">
									<TextView android:text="-" android:id="@+id/passed_time"
										android:textColor="#000000"
										android:layout_marginLeft="15dip" android:layout_marginRight="10dip"
										android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
									<TextView android:text="経過" android:layout_marginLeft="5dip"
										android:textColor="#000000"
										android:layout_marginRight="20dip" android:layout_width="wrap_content"
										android:layout_height="wrap_content"></TextView>
								</LinearLayout>
							</TableRow>
							<TableRow>
							    <LinearLayout android:layout_gravity="left"
									android:layout_width="wrap_content" android:layout_height="wrap_content">
								<TextView android:layout_marginLeft="15dip"
										android:textColor="#000000"
										android:text="座席"
									android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
								<TextView android:text="-" android:id="@+id/seet_num"
										android:textColor="#000000"
										android:gravity="right"
									android:layout_marginLeft="35dip" android:layout_marginRight="20dip"
									android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
								</LinearLayout>
							</TableRow>
							<TableRow>
								<LinearLayout android:layout_gravity="left"
									android:layout_width="wrap_content" android:layout_height="wrap_content">
									<TextView android:layout_marginLeft="15dip"
										android:textColor="#000000"
										android:text="来場者数" android:layout_width="wrap_content"
										android:layout_height="wrap_content"></TextView>
									<TextView android:id="@+id/gate_viewcount"
										android:textColor="#000000"
										android:gravity="right" android:layout_marginLeft="35dip"
										android:layout_marginRight="20dip" android:text="-"
										android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
								</LinearLayout>
							</TableRow>
							<TableRow>
								<LinearLayout android:layout_gravity="left"
									android:layout_width="wrap_content" android:layout_height="wrap_content">
									<TextView android:layout_marginLeft="15dip"
										android:textColor="#000000"
										android:text="コメント" android:layout_width="wrap_content"
										android:layout_height="wrap_content"></TextView>
									<TextView android:id="@+id/gate_resnum"
										android:gravity="right" android:layout_marginLeft="35dip"
										android:layout_marginRight="20dip" android:text="-"
										android:textColor="#000000"
										android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
								</LinearLayout>
							</TableRow>
						</TableLayout>
					</TableRow>
				</TableLayout>
			</TableRow>




			<TableRow>
				<TableLayout android:layout_gravity="center"
					android:layout_marginTop="10dip" android:layout_height="fill_parent"
					android:stretchColumns="0,1" android:id="@+id/table3"
					android:layout_width="wrap_content">
					<TableRow>
						<TextView android:text="コミュ二ティ名"
							android:textColor="#000000"
							android:layout_span="2"
							android:layout_marginLeft="20dip"
							android:layout_marginRight="20dip"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"></TextView>
						</TableRow>
						<TableRow>
						<TextView android:text="-"
						    android:id="@+id/gate_community_name"
						    android:layout_marginLeft="20dip"
							android:layout_marginRight="20dip"
							android:layout_span="2"
							android:textColor="#000000"
							android:gravity="center"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"></TextView>
						</TableRow>
					<TableRow android:paddingBottom="10dip">
						<TextView android:text="放送者名"
						    android:layout_marginLeft="20dip"
							android:textColor="#000000"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
						</TextView>
						<TextView android:text="-"
						    android:id="@+id/gate_owner_name"
							android:textColor="#000000"
							android:gravity="left"
							android:layout_marginRight="20dip"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"></TextView>
					</TableRow>
					<TableRow>
						<Button android:text="予約"
						    android:id="@+id/gate_reserve_bt"
							android:textColor="#000000"
							android:layout_span="1"
							android:visibility="gone"
							android:layout_marginLeft="20dip"
							android:layout_marginRight="20dip"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"></Button>
						</TableRow>
				</TableLayout>
			</TableRow>



			<TableRow>
				<LinearLayout android:layout_marginLeft="20dip"
					android:layout_marginRight="20dip" android:background="#000000"
					android:layout_width="fill_parent" android:layout_height="fill_parent">
					<TextView android:gravity="center" android:background="#ffffff"
						android:text="タグ" android:id="@+id/gate_taglabel"
										android:textColor="#000000"
						android:layout_width="fill_parent" android:layout_height="fill_parent"
						android:layout_marginBottom="1dip"></TextView>
				</LinearLayout>
			</TableRow>
			<TableRow>
				<LinearLayout android:text="" android:id="@+id/gate_tags_parent"
					android:background="#ffffff" android:layout_marginLeft="20dip"
					android:layout_marginRight="20dip" android:layout_width="fill_parent"
					android:layout_height="wrap_content"></LinearLayout>
			</TableRow>
			<TableRow>
				<LinearLayout android:layout_marginTop="10dip"
					android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
					android:background="#000000" android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					<TextView android:text="放送タイトル" android:textColor="#000000" android:id="@+id/gate_titlelabel"
						android:gravity="center" android:background="#ffffff"
						android:layout_marginBottom="1dip" android:layout_width="fill_parent"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
			</TableRow>
			<TableRow>
				<LinearLayout android:id="@+id/gate_title_parent"
					android:background="#ffffff" android:layout_marginLeft="20dip"
					android:layout_marginRight="20dip" android:layout_width="fill_parent"
					android:layout_height="wrap_content"></LinearLayout>
			</TableRow>

			<TableRow>
				<LinearLayout android:layout_marginTop="10dip"
					android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
					android:background="#000000" android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					<TextView android:text="放送詳細" android:textColor="#000000" android:id="@+id/gate_desclabel"
						android:gravity="center" android:background="#ffffff"
						android:layout_marginBottom="1dip" android:layout_width="fill_parent"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
			</TableRow>
			<TableRow>
				<LinearLayout android:id="@+id/gate_desc_parent"
					android:background="#ffffff" android:layout_marginLeft="20dip"
					android:layout_marginRight="20dip" android:layout_width="fill_parent"
					android:layout_height="wrap_content"></LinearLayout>
			</TableRow>


			<TableRow>
				<LinearLayout android:layout_marginTop="10dip"
					android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
					android:background="#000000" android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					<TextView android:text="コミュニティ情報"
					android:textColor="#000000" android:id="@+id/gate_commulabel"
						android:gravity="center" android:background="#ffffff"
						android:layout_marginBottom="1dip" android:layout_width="fill_parent"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
			</TableRow>
			<TableRow>
				<LinearLayout android:id="@+id/gate_commuinfo_parent"
					android:background="#ffffff" android:layout_marginLeft="20dip"
					android:layout_marginRight="20dip" android:layout_width="fill_parent"
					android:layout_height="wrap_content"></LinearLayout>
			</TableRow>

		</TableLayout>
	</ScrollView>


	<!-- 上部CLOSEボタン -->
	<FrameLayout android:layout_gravity="top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/gate_close_frame">
		<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
			android:background="#6d6c6d">
			<LinearLayout android:layout_marginTop="4dip"
			android:layout_height="25dip"
				android:layout_marginBottom="2dip" android:layout_width="fill_parent"
				android:background="#FFFFFF">
				<TextView android:gravity="center" android:text="CLOSE"
					android:layout_width="fill_parent" android:layout_height="fill_parent"></TextView>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:id="@+id/progresslinear"
			android:paddingTop="25dip"
					android:layout_width="fill_parent" android:layout_height="wrap_content">
					<ProgressBar android:id="@+id/ProgressBarHorizontal"
						android:layout_width="fill_parent" android:layout_height="fill_parent"></ProgressBar>
				</LinearLayout>

	</FrameLayout>


	<!-- 下のレイヤー -->
	<FrameLayout android:id="@+id/gate_bottom_frame"
		android:layout_gravity="bottom" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TableLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TableRow android:gravity="center" android:background="#6d6c6d"
				 android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<LinearLayout
				android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					<TextView android:text="LINKS" android:gravity="center"
						android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
				</LinearLayout>
			</TableRow>

			 <TableRow android:id="@+id/gate_linkbutton_parent"
			 android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content">
<!-- 			<Button android:id="@+id/gate_lbutton_0" android:layout_width="wrap_content" android:layout_height="fill_parent"></Button> --> -->
<!-- 			 <Button android:id="@+id/gate_lbutton_1" android:layout_width="wrap_content" android:layout_height="fill_parent"></Button> -->
<!-- 			 <Button android:id="@+id/gate_lbutton_2" android:layout_width="wrap_content" android:layout_height="fill_parent"></Button> -->
<!-- 			 <Button android:id="@+id/gate_lbutton_3" android:layout_width="wrap_content" android:layout_height="fill_parent"></Button> -->
<!-- 			 <Button android:id="@+id/gate_lbutton_4" android:layout_span="2" android:layout_width="fill_parent" android:layout_height="fill_parent"></Button> -->

			</TableRow>

		</TableLayout>
	</FrameLayout>
</FrameLayout>
